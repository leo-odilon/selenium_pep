// devcontainer.json

{
	"name": "Python Selenium DevContainer",
	"build": {
			"dockerfile": "Dockerfile"
	},
	"customizations": {
			"vscode": {
					"settings": {
							"terminal.integrated.shell.linux": "/bin/bash"
					},
					"extensions": [
							"ms-python.python",
							"ms-python.vscode-pylance"
					]
			}
	},
	"forwardPorts": [],
	"postCreateCommand": "pip install -r .devcontainer/requirements.txt",
	"remoteUser": "root"
}
